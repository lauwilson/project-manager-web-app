@{
    Page.Title = "Add";
}
@using Hemlock.Models
@model StaffView
    @using (Html.BeginForm("Add", "Staff", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <!-- Add Entry Modal -->
        <div class="modal fade" id="modal-add-entry" role="dialog">
            <div class="modal-dialog" id="modal-create-entry" role="document">
                <!-- Modal Content -->
                <div class="modal-content">

                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h3 class="modal-title">Add User</h3>
                    </div>

                    <div class="modal-body ">
                        <form class="form-horizontal">
                            <div class="form-group modal-element">
                                <label for="modal-fname" class="col-sm-4 modal-label">First Name:</label>
                                <div class="col-sm-8">
                                    @Html.EditorFor(Model => Model.newEmployee.FirstName,
                                    new { htmlAttributes = new
                                    {
                                        @class = "form-control",
                                        id = "add-employee-fname",
                                        required = "required"
                                    } })
                                </div>
                                </div>
                            <div class="form-group modal-element">
                                <label for="modal-lname" class="col-sm-4 modal-label">Last Name:</label>
                                <div class="col-sm-8">
                                    @Html.EditorFor(Model => Model.newEmployee.LastName,
                                    new { htmlAttributes = new {
                                        @class = "form-control",
                                        id = "add-employee-lname",
                                        required = "required"
                                    } })
                                </div>
                                </div>
                            <div class="form-group modal-element">
                                <label for="modal-from-date" class="col-sm-4 modal-label">Start Date:</label>
                                <div class="col-sm-8">
                                    @Html.EditorFor(Model => Model.newEmployee.StartDate,
                                    new { htmlAttributes = new
                                    {
                                        @class = "form-control",
                                        id = "newstaff-daterange",
                                        required = "required",
                                        @Value = @Model.now
                                    } })

                                </div>
                            </div>
                            <div class="form-group modal-element">
                                <label for="modal-employee-position" class="col-sm-4 modal-label">Position:</label>
                                <div class="col-sm-8">
                                    @Html.DropDownListFor(Model => Model.newEmployee.positionID,
                              Model.ListOfPositions, string.Empty, new
                              {
                                  @class = "form-control",
                                  required = "required",
                                  id = "add-employee-position"
                              })
                                </div>
                            </div>

                            <div class="form-group modal-element">
                                <label for="modal-employee-email" class="col-sm-4 modal-label">Email:</label>
                                <div class="col-sm-8">
                                    @Html.EditorFor(Model => Model.newEmployee.Email,
                  new { htmlAttributes = new { @class = "form-control", id = "add-employee-email" } })

                                </div>
                            </div>
                        </form>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success">Add</button>
                    </div>

                </div>
            </div>
        </div> <!-- /modal-add-entry -->
    }

